- var description = page_meta.meta_description
- var keywords = page_meta.meta_keywords
- var title = page_meta.title

doctype html
html(lang='en')
    head
        meta(
            content 'width=device-width',
            initial-scale "1"
        )

        meta(
            name='Keywords'
            content=keywords
        )

        meta(
            name='description'
            content=description
        )

        meta(
            charset='UTF-8'
        )

        link(
            rel='stylesheet'
            href='https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css'
        )

        title=title

    body
        include components/header

        main.content
            include  components/stock

            include  components/page_text
